{
  "name": "organization-readme-badge-generator",
  "description": "An action to create markdown badges for your GitHub organization's README.md file",
  "version": "1.0.2",
  "author": "",
  "private": true,
  "homepage": "https://github.com/jamestrichardson/organization-readme-badge-generator#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jamestrichardson/organization-readme-badge-generator.git"
  },
  "bugs": {
    "url": "https://github.com/jamestrichardson/organization-readme-badge-generator/issues"
  },
  "keywords": [
    "GitHub",
    "Actions",
    "JavaScript",
    "Organization Readme",
    "Badges"
  ],
  "exports": {
    ".": "./dist/index.mjs"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "bundle": "npm run format:write && npm run package",
    "ci-test": "npx vitest run",
    "coverage": "npx vitest run --coverage && npx make-coverage-badge --output-path ./badges/coverage.svg",
    "format:write": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "lint": "npx eslint .",
    "lint:fix": "npx eslint . --fix",
    "package": "npx ncc build src/index.mjs -o dist --source-map --license licenses.txt",
    "package:watch": "npm run package -- --watch",
    "test": "npx vitest",
    "all": "npm run format:write && npm run lint && npm run test && npm run coverage && npm run package",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,mjs}": [
      "npx prettier --write",
      "npx eslint --fix"
    ],
    "*.{json,yml,yaml,md}": [
      "npx prettier --write"
    ]
  },
  "license": "MIT",
  "type": "module",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@octokit/graphql": "^8.1.1",
    "caniuse-lite": "^1.0.30001743",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.36.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.0",
    "prettier": "^3.6.2",
    "vitest": "^3.2.4"
  }
}
